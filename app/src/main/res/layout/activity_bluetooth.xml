<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="712dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/Conn_bluetooth"
            android:layout_width="416dp"
            android:layout_height="55dp"
            android:text="bluetooth" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/distance-tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance : " />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weight-tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="94dp"
                    android:layout_marginLeft="94dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginRight="9dp"
                    app:srcCompat="@android:drawable/sym_def_app_icon" />

                <TextView
                    android:id="@+id/connect_text"
                    android:layout_width="116dp"
                    android:layout_height="89dp"
                    android:layout_marginEnd="132dp"
                    android:layout_marginRight="132dp"
                    android:gravity="center"
                    android:text="CONNECTIONING.."
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="55dp"
                android:layout_marginEnd="43dp"
                android:layout_marginRight="43dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/weight_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   무게센서" />

                <ImageView
                    android:id="@+id/weight_sensor"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    app:srcCompat="@android:drawable/presence_online" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="49dp"
                android:layout_marginRight="49dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/infrared_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 적외선센서" />

                <ImageView
                    android:id="@+id/infrared_sensor"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    app:srcCompat="@android:drawable/presence_online" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ultra_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 초음파센서" />

                <ImageView
                    android:id="@+id/ultra_sensor"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    app:srcCompat="@android:drawable/presence_online" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
