<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GPShomeActivity">

    <TextView
        android:id="@+id/gps_text"
        android:layout_width="73dp"
        android:layout_height="0dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="70dp"
        android:text="GPS"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/now_lo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/parking_lo"
        android:layout_width="191dp"
        android:layout_height="0dp"
        android:layout_marginBottom="270dp"
        android:text="주차 위치"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/now_lo" />

    <Button
        android:id="@+id/now_lo"
        android:layout_width="191dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        android:text="현재 위치"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/parking_lo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gps_text" />
</androidx.constraintlayout.widget.ConstraintLayout>